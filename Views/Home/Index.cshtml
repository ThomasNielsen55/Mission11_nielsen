@{
    ViewData["Title"] = "Home Page";
}
@model BookListViewModel
<div class="card m-1 p-1">

        <h1>Book Store</h1>
       
            @foreach (Book x in Model.Books)
            {
                <div class="card m-1 p-1">

                    <ul>
                        <h4>Title:                      @x.Title
                        <span class="badge rounded-pill bg-primary text-white float-end"><small>Price: @x.Price</small></span>
                        </h4>
                        <li>Author:                     @x.Author</li>
                        <li>Publisher:                  @x.Publisher</li>
                        <li>ISBN:                       @x.Isbn</li>
                        <li>Category/Classifiaction:    @x.Category/@x.Classification </li>
                        <li>Number of Pages:            @x.PageCount</li>
                    </ul>
                </div>
            }
    </div>

    <div page-model="@Model.PaginationInfo" page-action="Index" page-classes-enabled="true"
    page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>